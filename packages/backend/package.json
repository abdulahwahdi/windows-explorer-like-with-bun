{
  "name": "@windows-explorer/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "test": "bun test",
    "test:unit": "bun test src/**/*.test.ts",
    "test:integration": "bun test src/**/*.integration.test.ts",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "bun src/infrastructure/database/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "setup": "bun run db:up && sleep 3 && bun run db:generate && bun run db:migrate && bun run db:seed",
    "docker:build": "docker build -t windows-explorer-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env windows-explorer-backend"
  },
  "prisma": {
    "seed": "bun src/infrastructure/database/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@prisma/client": "^5.7.0",
    "elysia": "^1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.7.0",
    "typescript": "^5.3.0"
  }
}